@using Microsoft.AspNet.Identity

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Vender" title="Vender un producto"><span class="glyphicon glyphicon-usd"></span> Vender</a></li>
        <li><a href="/Carrito" title="Mi carrito"><span class="glyphicon glyphicon-shopping-cart"></span><span id="items"> 0</span></a></li>
        <li><a href="/Manage" title="Mi cuenta"><span class="glyphicon glyphicon-user"></span> @User.Identity.GetUserName()</a></li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><span class="glyphicon glyphicon-log-out"></span> Salir</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Vender" title="Vender un producto"><span class="glyphicon glyphicon-usd"></span> Vender</a></li>
        <li><a href="/Carrito" title="Mi carrito"><span class="glyphicon glyphicon-shopping-cart"></span><span id="items"> 0</span></a></li>
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
